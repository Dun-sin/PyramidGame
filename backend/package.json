{
  "name": "pyramidgame",
  "version": "0.0.0",
  "description": "backend for pyramid game",
  "main": "index.js",
  "scripts": {
    "dev": "npm run nodemon",
    "start": "export APP_ENV=production && node -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config build/index.js",
    "build": "tsc",
    "nodemon": "nodemon --watch src/**/*.ts --ignore src/**/*.spec.ts -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config --exec ts-node src/index.ts",
    "migrate-mongo": "set -o allexport; source .env set; +o allexport; migrate-mongo",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts"
  },
  "author": "Dun-sin",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/mongoose-unique-validator": "^1.0.4",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.27.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/socket.io": "^3.0.2",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.1.0",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "mongoose": "^5.12.10",
    "mongoose-unique-validator": "^2.0.3",
    "nodemon": "^2.0.7",
    "socket.io": "^4.7.4",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "dotenv": "^10.0.0"
  }
}
